IAggregate geometrycollectionText():
{
    IAggregate geometryCollection=new GM_Aggregate();
    IGeometry geometry;
}
{
    ("("
    geometry=geometryTaggedText() {geometryCollection.add(geometry);}
    ("," geometry=geometryTaggedText()
